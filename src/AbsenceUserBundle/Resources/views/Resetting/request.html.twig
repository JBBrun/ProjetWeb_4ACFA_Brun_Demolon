{% extends "AbsenceBundle::template.html.twig" %}
{% block titre %}
    <spam  class="page-header">CHANGER MOT DE PASSE</spam>
{% endblock %}

{% block body %}
    <div class="text-center">

        {% if  invalid_username is defined %}
        <i class="text-center center-block text-danger"><strong>{{ invalid_username }} </strong> n'est pas référencé dans la base
            de données</i><br>
        {% endif %}

<form action="/resetting/send-email" method="POST" class="fos_user_resetting_request centerForm">
    <div class="form-group">
        <label for="username">Nom d'utilisateur</label>
        <input class="form-control" id="username" name="username" required="required" type="text">
    </div>
    <div class="form-group">
        <input  class="btn btn-default" value="Réinitialiser le mot de passe" type="submit">
    </div>
</form>
        <a href="/login"><button type="submit" class="btn btn-primary" class="btn btn-default">Retour login</button></a>
